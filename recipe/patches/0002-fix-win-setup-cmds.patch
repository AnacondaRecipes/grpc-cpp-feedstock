+    if sys.platform == 'win32':
+        return False
+
     """Test if linker on system needs libatomic."""
     code_test = (
         b"#include <atomic>\n"
@@ -268,10 +271,6 @@ if EXTRA_ENV_COMPILE_ARGS is None:
